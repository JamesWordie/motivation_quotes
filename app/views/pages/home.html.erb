<div class="banner">
  <h1 class="ml4 text-center text-white">
    <span class="letters letters-1">Motivational</span>
    <span class="letters letters-2">Quotes</span>
    <span class="letters letters-3">To</span>
    <span class="letters letters-4">Inspire</span>
    <span class="letters letters-5">You</span>
    <span class="letters letters-6">Today</span>
  </h1>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
</div>
<div class="container" id="home">
  <div class="row justify-content-center align-items-center">
    <% @quotes.sample(8).each do |quote| %>
    <div class="col-lg-6 col-12 flex-fill my-4">
      <div data-aos="flip-left" data-aos-easing="ease-out-cubic" data-aos-duration="2000">
        <div class="card my-3 bg-dark text-light h-100 mx-auto">
          <div class="card-body">
            <h5 id="quote-title" class="card-title border-bottom pb-2"><%= quote.title %></h5>
            <p id="quote-author" class="card-text text-muted"><%= quote.author %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
